<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane fx:controller="controllers.DashboardController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.rowIndex="0">
        <columns>
            <TableColumn text="Type" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="type" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Description" prefWidth="400">
                <cellValueFactory><PropertyValueFactory property="description" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Amount" prefWidth="300">
                <cellValueFactory><PropertyValueFactory property="amount" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Created At" prefWidth="300">
                <cellValueFactory><PropertyValueFactory property="createdAt" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <TextField fx:id="descriptionField" promptText="Description"
                   prefWidth="400"/>
        <TextField fx:id="amountField" promptText="Amount"
                   prefWidth="400"/>
        <ComboBox fx:id="typeOptions" prefWidth="400" promptText="-- select an option --" />
        <Button text="Add" prefWidth="100"/>
    </HBox>
</GridPane>